<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tlo"
    tools:context="com.uwm.wmii.student.michal.itmproj.Fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        android:text="Menu główne"
        android:textAlignment="center"
        android:textSize="24sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/homeButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="150dp"
            android:text="Test"
            android:textAlignment="center"
            android:visibility="visible"
            />
        <!--style="@style/CKButton"-->
        <Button
            android:id="@+id/homeButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/homeButton1"
            android:layout_marginTop="18dp"
            android:text="Dodaj Al."
            android:textAlignment="center"
            android:visibility="visible" />

        <Button
            android:id="@+id/homeButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/homeButton2"
            android:layout_marginTop="65dp"
            android:text="Gra"
            android:textAlignment="center"
            android:visibility="visible" />
    </RelativeLayout>

</FrameLayout>
