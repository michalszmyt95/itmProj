<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/tlo"
    tools:context="com.uwm.wmii.student.michal.itmproj.AlkoPickerActivity"
>


    <NumberPicker
        android:id="@+id/alkoPicker"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleX="1.5"
        android:scaleY="1.5"
        />

    <ImageButton
        android:id="@+id/oknp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="208dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/alkoPicker"
        app:srcCompat="@drawable/ok3" />

    <ImageButton
        android:id="@+id/anulujnp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="208dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/alkoPicker"
        app:srcCompat="@drawable/cancel3" />

    <TextView
        android:id="@+id/title"
        android:layout_width="201dp"
        android:layout_height="52dp"
        android:background="@android:color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"/>


</android.support.constraint.ConstraintLayout>